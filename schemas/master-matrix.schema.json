{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ATK Master Matrix",
  "type": "object",
  "required": [
    "catalog_name",
    "catalog_version",
    "providers",
    "rows"
  ],
  "properties": {
    "catalog_name": {
      "type": "string"
    },
    "catalog_version": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "providers": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "rows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "domain",
          "capability_name",
          "capability_id",
          "used_for",
          "providers"
        ],
        "properties": {
          "domain": {
            "type": "string"
          },
          "capability_name": {
            "type": "string"
          },
          "capability_id": {
            "type": "string",
            "pattern": "^[a-z0-9_]+\\.[a-z0-9_]+$"
          },
          "used_for": {
            "type": "string",
            "minLength": 10
          },
          "providers": {
            "type": "object",
            "required": [
              "aws",
              "azure",
              "gcp",
              "oci"
            ],
            "properties": {
              "aws": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "azure": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "gcp": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "oci": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          },
          "notes": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "active",
              "preview",
              "deprecated"
            ]
          },
          "last_reviewed": {
            "type": "string",
            "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}